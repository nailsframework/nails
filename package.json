  "bugs": {
    "url": "https://github.com/nailsframework/nails/issues"
  },
  "homepage": "https://github.com/nailsframework/nails#readme",
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
